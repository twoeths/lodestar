{
  "name": "@lodestar/light-client",
  "description": "A Typescript implementation of the Ethereum Consensus light client",
  "license": "Apache-2.0",
  "author": "ChainSafe Systems",
  "homepage": "https://github.com/ChainSafe/lodestar#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ChainSafe/lodestar.git"
  },
  "bugs": {
    "url": "https://github.com/ChainSafe/lodestar/issues"
  },
  "version": "1.39.1",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./utils": {
      "bun": "./src/utils/index.ts",
      "types": "./lib/utils/index.d.ts",
      "import": "./lib/utils/index.js"
    },
    "./validation": {
      "bun": "./src/validation.ts",
      "types": "./lib/validation.d.ts",
      "import": "./lib/validation.js"
    },
    "./spec": {
      "bun": "./src/spec/index.ts",
      "types": "./lib/spec/index.d.ts",
      "import": "./lib/spec/index.js"
    },
    "./transport": {
      "bun": "./src/transport/index.ts",
      "types": "./lib/transport/index.d.ts",
      "import": "./lib/transport/index.js"
    }
  },
  "files": [
    "src",
    "lib",
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "clean": "rm -rf lib && rm -rf dist && rm -f *.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "pnpm run build --watch",
    "check-build": "node -e \"(async function() { await import('./lib/index.js') })()\"",
    "build:bundle": "vite build",
    "check-bundle": "node -e \"(async function() { await import('./dist/lightclient.min.mjs') })()\"",
    "build:release": "pnpm clean && pnpm run build && pnpm run build:bundle",
    "check-types": "tsc",
    "lint": "biome check src/ test/",
    "lint:fix": "pnpm run lint --write",
    "test": "pnpm test:unit",
    "test:unit": "vitest run --project unit --project unit-minimal",
    "test:browsers": "pnpm run build:bundle && vitest run --project browser",
    "check-readme": "pnpm exec ts-node ../../scripts/check_readme.ts"
  },
  "dependencies": {
    "@chainsafe/bls": "8.2.0",
    "@chainsafe/blst": "^2.2.0",
    "@chainsafe/persistent-merkle-tree": "^1.2.1",
    "@chainsafe/ssz": "^1.2.2",
    "@lodestar/api": "workspace:^",
    "@lodestar/config": "workspace:^",
    "@lodestar/params": "workspace:^",
    "@lodestar/types": "workspace:^",
    "@lodestar/utils": "workspace:^",
    "mitt": "^3.0.0"
  },
  "devDependencies": {
    "@chainsafe/as-sha256": "^1.2.0",
    "@fastify/cors": "^10.0.1",
    "@lodestar/state-transition": "workspace:^",
    "@types/qs": "^6.9.7",
    "fastify": "^5.2.1",
    "qs": "^6.11.1",
    "uint8arrays": "^5.0.1"
  },
  "keywords": [
    "ethereum",
    "eth-consensus",
    "beacon",
    "light-client",
    "blockchain"
  ]
}

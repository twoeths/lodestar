{
  "name": "@lodestar/spec-test-util",
  "version": "1.38.0",
  "description": "Spec test suite generator from yaml test files",
  "author": "ChainSafe Systems",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChainSafe/lodestar/issues"
  },
  "homepage": "https://github.com/ChainSafe/lodestar#readme",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./downloadTests": {
      "bun": "./src/downloadTests.ts",
      "types": "./lib/downloadTests.d.ts",
      "import": "./lib/downloadTests.js"
    }
  },
  "files": [
    "src",
    "lib",
    "!**/*.tsbuildinfo"
  ],
  "bin": {
    "eth2-spec-test-download": "lib/downloadTestsCli.js"
  },
  "scripts": {
    "clean": "rm -rf lib && rm -f *.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json",
    "build:release": "pnpm clean && pnpm build",
    "build:watch": "pnpm run build --watch",
    "check-build": "node -e \"(async function() { await import('./lib/downloadTests.js') })()\"",
    "check-types": "tsc",
    "lint": "biome check src/ test/",
    "lint:fix": "pnpm run lint --write",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "vitest run --project unit --project unit-minimal",
    "test:e2e": "vitest run --project e2e --project e2e-mainnet",
    "check-readme": "pnpm exec ts-node ../../scripts/check_readme.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ChainSafe/lodestar.git"
  },
  "keywords": [
    "ethereum",
    "eth-consensus",
    "beacon",
    "blockchain"
  ],
  "dependencies": {
    "@lodestar/utils": "workspace:^",
    "rimraf": "^4.4.1",
    "snappyjs": "^0.7.0",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@chainsafe/ssz": "^1.2.2",
    "@lodestar/types": "workspace:^",
    "vitest": "catalog:"
  }
}

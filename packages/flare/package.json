{
  "name": "@lodestar/flare",
  "version": "1.39.1",
  "description": "Beacon chain debugging tool",
  "author": "ChainSafe Systems",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChainSafe/lodestar/issues"
  },
  "homepage": "https://github.com/ChainSafe/lodestar#readme",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "src",
    "lib",
    "!**/*.tsbuildinfo"
  ],
  "bin": {
    "flare": "lib/index.js"
  },
  "scripts": {
    "clean": "rm -rf lib && rm -f *.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json",
    "build:release": "pnpm run clean && pnpm run build",
    "build:watch": "pnpm run build --watch",
    "check-build": "node -e \"(async function() { await import('./lib/index.js') })()\" flare --help",
    "check-types": "tsc",
    "lint": "biome check src/",
    "lint:fix": "pnpm run lint --write",
    "test": "pnpm test:unit",
    "test:unit": "vitest run --project unit --project unit-minimal",
    "check-readme": "pnpm exec ts-node ../../scripts/check_readme.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ChainSafe/lodestar.git"
  },
  "keywords": [
    "ethereum",
    "eth-consensus",
    "beacon",
    "blockchain"
  ],
  "dependencies": {
    "@chainsafe/bls-keygen": "^0.4.0",
    "@chainsafe/blst": "^2.2.0",
    "@lodestar/api": "workspace:^",
    "@lodestar/config": "workspace:^",
    "@lodestar/params": "workspace:^",
    "@lodestar/state-transition": "workspace:^",
    "@lodestar/types": "workspace:^",
    "@lodestar/utils": "workspace:^",
    "source-map-support": "^0.5.21",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.24"
  }
}
